{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "ignorePatterns": [
        "example/**",
        "lib/**",
        "node_modules/**"
    ],
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "@typescript-eslint/quotes": [
            "error",
            "double"
        ],
        "indent": [
            "error",
            4
        ],
        "@typescript-eslint/indent": [
            "error",
            4
        ]
    }
}
